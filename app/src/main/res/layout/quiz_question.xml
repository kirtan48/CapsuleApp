<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/quiz_bg">
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="slkn cslfnsen innd nfd awopdjav sjido jsdoi pdjcpk"
        android:textSize="25dp"


        android:background="@drawable/text_border"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:textStyle="bold"

        />
    <androidx.cardview.widget.CardView
        android:id="@+id/option1_cd_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option1"
        app:layout_constraintStart_toStartOf="@id/tv_option1"
        app:layout_constraintEnd_toEndOf="@id/tv_option1"
        app:layout_constraintBottom_toBottomOf="@id/tv_option1"

        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_2"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/option1_cd_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option1"
        app:layout_constraintBottom_toBottomOf="@id/tv_option1"
        app:layout_constraintStart_toStartOf="@id/tv_option1"
        app:layout_constraintEnd_toEndOf="@id/tv_option1"
        android:layout_marginBottom="@dimen/option_shadow"
        app:cardElevation="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question"
        android:text="my name is kirtan"
        android:id="@+id/tv_option1"
        android:padding="@dimen/option_padding"
        android:background="#00000000"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/option_tv_size"
        android:gravity="center"
        android:textColor="@color/tv_option"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/option2_cd_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option2"
        app:layout_constraintStart_toStartOf="@id/tv_option2"
        app:layout_constraintEnd_toEndOf="@id/tv_option2"
        app:layout_constraintBottom_toBottomOf="@id/tv_option2"

        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_2"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/option2_cd_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option2"
        app:layout_constraintBottom_toBottomOf="@id/tv_option2"
        app:layout_constraintStart_toStartOf="@id/tv_option2"
        app:layout_constraintEnd_toEndOf="@id/tv_option2"
        android:layout_marginBottom="@dimen/option_shadow"
        app:cardElevation="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_option1"
        app:layout_constraintStart_toStartOf="@id/tv_option1"
        app:layout_constraintEnd_toEndOf="@id/tv_option1"
        android:text="my name is kirtan"
        android:id="@+id/tv_option2"
        android:padding="@dimen/option_padding"
        android:background="#00000000"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/option_tv_size"
        android:gravity="center"
        android:textColor="@color/tv_option"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/option3_cd_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option3"
        app:layout_constraintStart_toStartOf="@id/tv_option3"
        app:layout_constraintEnd_toEndOf="@id/tv_option3"
        app:layout_constraintBottom_toBottomOf="@id/tv_option3"

        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_2"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/option3_cd_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option3"
        app:layout_constraintBottom_toBottomOf="@id/tv_option3"
        app:layout_constraintStart_toStartOf="@id/tv_option3"
        app:layout_constraintEnd_toEndOf="@id/tv_option3"
        android:layout_marginBottom="@dimen/option_shadow"
        app:cardElevation="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_option2"
        app:layout_constraintStart_toStartOf="@id/tv_option2"
        app:layout_constraintEnd_toEndOf="@id/tv_option2"
        android:text="my name is kirtan"
        android:id="@+id/tv_option3"
        android:padding="@dimen/option_padding"
        android:background="#00000000"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/option_tv_size"
        android:gravity="center"
        android:textColor="@color/tv_option"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/option4_cd_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option4"
        app:layout_constraintStart_toStartOf="@id/tv_option4"
        app:layout_constraintEnd_toEndOf="@id/tv_option4"
        app:layout_constraintBottom_toBottomOf="@id/tv_option4"

        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_2"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/option4_cd_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_option4"
        app:layout_constraintBottom_toBottomOf="@id/tv_option4"
        app:layout_constraintStart_toStartOf="@id/tv_option4"
        app:layout_constraintEnd_toEndOf="@id/tv_option4"
        android:layout_marginBottom="@dimen/option_shadow"
        app:cardElevation="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/option_bg_1"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_option3"
        app:layout_constraintStart_toStartOf="@id/tv_option3"
        app:layout_constraintEnd_toEndOf="@id/tv_option3"
        android:text="my name is kirtan"
        android:id="@+id/tv_option4"
        android:padding="@dimen/option_padding"
        android:background="#00000000"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/option_tv_size"
        android:gravity="center"
        android:textColor="@color/tv_option"/>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cd_prev_que"
        app:layout_constraintEnd_toStartOf="@id/cd_next_que"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#7687a7"
        android:id="@+id/cd_check_answer"
        android:layout_marginEnd="25dp"
        >
        <TextView
            android:id="@+id/tv_check_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK ANSWER"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
           />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_next_que"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cd_check_answer"
        app:layout_constraintBottom_toBottomOf="@id/cd_check_answer"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/button_blue_bg"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_chevron_right_24"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_prev_que"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cd_check_answer"
        app:layout_constraintBottom_toBottomOf="@id/cd_check_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/button_blue_bg"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_chevron_left_24"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cd_check_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/button_blue_bg"
        android:layout_margin="40dp"
        android:id="@+id/quiz_result">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Result"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>