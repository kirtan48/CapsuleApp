<!-- res/drawable/bordered_cardview.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#008000"></solid>
            <corners android:radius="5dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- Border for the CardView -->
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#008000" />
        </shape>
    </item>
</layer-list>
